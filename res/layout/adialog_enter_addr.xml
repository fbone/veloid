<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_top_color"
    android:id="@+id/new_station_s1_main">
    <!--
        <TextView android:id="@+id/select_location_provider_lbl" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/select_lp_1" android:padding="2dip"
        android:textColor="@color/list_bottom_color"/>
    -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_station_s1_part_address_label"
            android:padding="5dip"
            android:textColor="@color/list_bottom_color"
            android:width="300px" />

        <EditText
            android:id="@+id/dialogAddressTextInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:lines="3" />

        <Spinner
            android:id="@+id/dialogAddressSpinnerCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/disabled" />

    </LinearLayout>
    <!--
        LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@color/list_bottom_color"
        android:gravity="center_horizontal|center_vertical"> <ImageButton android:id="@+id/input_dialog_btn_valid" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/ok" /> <ImageButton android:id="@+id/input_dialog_provider_btn_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/cancel" /> </LinearLayout
    -->
</LinearLayout>