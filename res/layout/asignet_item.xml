<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15px"
    android:layout_marginRight="15px">

    <TextView
        android:id="@+id/OneStationItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:textStyle="bold"  
        android:background="@color/green_one"
        android:paddingBottom="0px"
        android:textColor="@color/favorite_text_color"
        android:layout_marginBottom="0px"/>

    <LinearLayout
        android:id="@+id/favoriteInfoContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bikes_label"
                android:textSize="15px"
                android:paddingLeft="3px" />
            <TextView
                android:id="@+id/OneStationItemBikesVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25px"
                android:textStyle="bold"
                android:paddingLeft="5px" 
                android:layout_marginTop="0px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="2">


            <TextView
            android:gravity="right"
                android:id="@+id/favLbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slots_label"
                android:textSize="15px" 
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/OneStationItemSlotsVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25px"
                android:textStyle="bold"
                android:paddingRight="6px"
                android:paddingLeft="5px" 
                android:layout_marginTop="0px"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

