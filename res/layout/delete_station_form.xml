<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
    android:background="@color/list_top_color">
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/bookmark_delete"
      android:padding="5px"
      android:scaleType="fitXY" />

    <TextView
      android:id="@+id/del_fav_title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingTop="5px"
      android:paddingBottom="5px"
      android:textColor="@color/title_txt_color"
      android:background="@color/list_top_color"
      android:text="@string/del_station_title"
      android:textSize="40px" />
  </LinearLayout>
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@color/list_top_color">
    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="10px"
      android:gravity="right"
      android:textColor="@color/title_txt_color"
      android:textSize="20px"
      android:paddingRight="5px"
      android:text="@string/del_station_sub_title" />
  </LinearLayout>
  <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:layout_weight="1"
    android:id="@+id/del_station_s2_scroll">
    <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/del_station_s2_rgrp_station"
      android:background="#89AB58">
    </RadioGroup>
  </ScrollView>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_bottom_color"
    android:gravity="center_horizontal|center_vertical">

    <ImageButton
      android:id="@+id/del_station_btn_valid"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ok" />

    <ImageButton
      android:id="@+id/del_station_btn_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/cancel" />
  </LinearLayout>
</LinearLayout>