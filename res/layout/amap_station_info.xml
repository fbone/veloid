<?xml version="1.0" encoding="utf-8"?>
<com.xirgonium.android.veloid.veloid2.map.StationInformationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/map_pin_small"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:gravity="top">

    <TextView
        android:id="@+id/map_station_available_bike"
        android:gravity="left|top"
        android:textSize="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/favorite_text_color" />
    <TextView
        android:id="@+id/map_station_free_slot"
        android:gravity="right|top"
        android:textSize="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textStyle="bold"
        android:textColor="@color/green_one" />


</com.xirgonium.android.veloid.veloid2.map.StationInformationView>